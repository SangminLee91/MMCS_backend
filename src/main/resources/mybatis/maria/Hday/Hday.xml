<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hday">


    <select id="holiday_list" parameterType="hashmap" resultType="hashmap">
        call usp_holiday_s(#{hday_nm});
    </select>

    <insert id="holiday_add" parameterType="hashmap">
        call usp_holiday_i(#{hday_date}, #{hday_nm}, #{repeat_yn}, #{reg_user_id}, #{_SESSION_EMP_NO_};
    </insert>

    <update id="holiday_edt" parameterType="hashmap">
        call usp_holiday_u(#{hday_date}, #{hday_nm}, #{repeat_yn};
    </update>

    <update id="holiday_del" parameterType="hashmap">
        call usp_holiday_d(#{reg_user_id}, #{_SESSION_EMP_NO_});
    </update>

</mapper>